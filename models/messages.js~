var mongodb = require('./mongodb');
var Schema = mongodb.mongoose.Schema;
var messageSchema = new Schema({
master_id: String,             //沙发主id
host_id: String,              //沙发客id
mastername: String,            //沙发主昵称
hostname: String,             //沙发客昵称
message_id: String,          //留言id
message_time: Date,          //留言时间
infor:{
   message: String,           //留言内容
   to_whom: String            //回复给谁（用户id）
}
});

module.exports = mongodb.mongoose.model("message", messageSchema);
